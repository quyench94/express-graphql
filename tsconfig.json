{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "paths": {
      "*": [
        "node_modules/*",
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "sourceMap": true,
    "paths": {
      "*": [
        "node_modules/*",
      ]
    },
    "types": ["mocha"]
  },
  "include": [
    "./src/**/*.ts",
  ]
}